#!/bin/bash

# Define a function to display information about a subdomain
function display_subdomain_info() {
  local subdomain=$1

  # Get the record type and destination of the subdomain
  local record_type=$(dig +short -t any $subdomain @$NAMESERVER)
  local destination=$(dig +short $subdomain @$NAMESERVER)

  # Display the information
  echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Get the domain and subdomain parameters from the user
domain=$1
subdomain=$2

# If the subdomain parameter is not provided, display information for the specified domain's subdomains
if [[ -z "$subdomain" ]]; then
  for subdomain in www lb-01 web-01 web-02; do
    display_subdomain_info $subdomain
  done
else
  # Display information for the specified subdomain
  display_subdomain_info $subdomain
fi

